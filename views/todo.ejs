<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/todo.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <title>Document</title>
</head>

<body>
    <%- include('nav.html') %>
        <main class="mx-0 p-0 mx-md-5 px-md-4 d-flex justify-content-center flex-column mb-4">
            <ul class="list-group mx-0 p-4 mx-md-4 container">
                <% for (var i=0; i < posts.length; i++){ %>
                    <li class="taskList-item row py-1 px-3">
                        <input type="checkbox" name="cbox-<%- i %>" id="cbox-<%- i %>" class="form-check-input p-2 col-1">
                        <a href="/tasks/<%- posts[i]._id %>" class="text-decoration-none link-dark col-11">
                            <label for="cbox<%- i %>" class="form-check-label row">
                                <div class="listDate text-muted col-md-2" id="ld-<%- i %>">
                                    <% var dat = new Date(posts[i].date) %>
                                    <%= dat.getUTCMonth() + 1 %>/<%= dat.getUTCDate() %>/<%= dat.getUTCFullYear() %>
                                </div>
                                <div class="listTitle fw-bold clamper col-md-3" id="lt-<%- i %>">
                                    <%- posts[i].title %>
                                </div>
                                <div class="listDesc clamper col-md-7" id="lt-<%- i %>">
                                    <%- posts[i].description %>
                                </div>
                            </label>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </main>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
            $(".delete").click(function(e) {
                $.ajax({
                        method: "DELETE",
                        url: "/tasks",
                        // dataset.id is from: data-id= posts[i]._id
                        data: {
                            _id: e.target.dataset.id
                        },
                    })
                    .done((res) => {
                        // we need this form to use $this
                        $(this).parent("li").fadeOut(); // function that erases the task
                        console.log("killed");
                    })
                    .fail((xhr, code, err) => {
                        // failure
                    });
            });
        </script>
</body>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</html>